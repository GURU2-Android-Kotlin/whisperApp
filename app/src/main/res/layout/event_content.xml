<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/titleSub"
        android:layout_width="207dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Title"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewSub"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contentSub"
        android:layout_width="205dp"
        android:layout_height="123dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Content"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewSub"
        app:layout_constraintTop_toBottomOf="@+id/titleSub" />

    <TextView
        android:id="@+id/detailSub"
        android:layout_width="374dp"
        android:layout_height="312dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="detail"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageViewSub"
        android:layout_width="158dp"
        android:layout_height="238dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/webBtn"
        android:layout_width="51dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="8dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/textView19"
        app:layout_constraintEnd_toStartOf="@+id/shareBtn"
        app:layout_constraintStart_toEndOf="@+id/imageViewSub"
        app:layout_constraintTop_toBottomOf="@+id/contentSub"
        app:srcCompat="@drawable/homepage" />

    <ImageButton
        android:id="@+id/shareBtn"
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="8dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/textView20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contentSub"
        app:srcCompat="@drawable/share" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="16dp"
        android:text="홈페이지 접속"
        app:layout_constraintBottom_toTopOf="@+id/detailSub"
        app:layout_constraintStart_toEndOf="@+id/imageViewSub" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="16dp"
        android:text="공유하기"
        app:layout_constraintBottom_toTopOf="@+id/detailSub"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/main_color"
        app:layout_constraintBottom_toTopOf="@+id/detailSub"
        app:layout_constraintTop_toBottomOf="@+id/textView19"
        tools:layout_editor_absoluteX="-35dp" />

</androidx.constraintlayout.widget.ConstraintLayout>